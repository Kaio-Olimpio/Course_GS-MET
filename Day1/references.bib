@article{vanraden_efficient_2008,
	title = {Efficient methods to compute genomic predictions},
	volume = {91},
	issn = {00220302},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S0022030208709901},
	doi = {10.3168/jds.2007-0980},
	abstract = {Efficient methods for processing genomic data were developed to increase reliability of estimated breeding values and to estimate thousands of marker effects simultaneously. Algorithms were derived and computer programs tested with simulated data for 2,967 bulls and 50,000 markers distributed randomly across 30 chromosomes. Estimation of genomic inbreeding coefficients required accurate estimates of allele frequencies in the base population. Linear model predictions of breeding values were computed by 3 equivalent methods: 1) iteration for individual allele effects followed by summation across loci to obtain estimated breeding values, 2) selection index including a genomic relationship matrix, and 3) mixed model equations including the inverse of genomic relationships. A blend of firstand second-order Jacobi iteration using 2 separate relaxation factors converged well for allele frequencies and effects. Reliability of predicted net merit for young bulls was 63\% compared with 32\% using the traditional relationship matrix. Nonlinear predictions were also computed using iteration on data and nonlinear regression on marker deviations; an additional (about 3\%) gain in reliability for young bulls increased average reliability to 66\%. Computing times increased linearly with number of genotypes. Estimation of allele frequencies required 2 processor days, and genomic predictions required {\textless}1 d per trait, and traits were processed in parallel. Information from genotyping was equivalent to about 20 daughters with phenotypic records. Actual gains may differ because the simulation did not account for linkage disequilibrium in the base population or selection in subsequent generations.},
	language = {en},
	number = {11},
	urldate = {2022-01-25},
	journal = {Journal of Dairy Science},
	author = {VanRaden, P.M.},
	month = nov,
	year = {2008},
	note = {Number: 11},
	keywords = {genomic selection, mixed model, computer program, relationship matrix},
	pages = {4414--4423},
	file = {ScienceDirect Snapshot:/home/saulo/snap/zotero-snap/common/Zotero/storage/8JGJB36S/S0022030208709901.html:text/html;VanRaden - 2008 - Efficient Methods to Compute Genomic Predictions.pdf:/home/saulo/snap/zotero-snap/common/Zotero/storage/VNNPNPGX/VanRaden - 2008 - Efficient Methods to Compute Genomic Predictions.pdf:application/pdf},
}

@article{vitezica_additive_2013,
