	number = {1},
	urldate = {2022-05-22},
	journal = {Heredity},
	author = {Dias, Kaio Olímpio Graças and Gezan, Salvador Alejandro and Guimarães, Claudia Teixeira and Nazarian, Alireza and Silva, Luciano Costa and Parentoni, Sidney Netto and Guimarães, Paulo Evaristo Oliveira and Anoni, Carina Oliveira and Pádua, José Maria Villela and Pinto, Marcos Oliveira and Noda, Roberto Willians and Ribeiro, Carlos Alexandre Gomes and Magalhães, Jurandir Vieira and Garcia, Antonio Augusto Franco and Souza, João Cândido and Guimarães, Lauro José Moreira and Pastina, Maria Marta},
	month = jul,
	year = {2018},
	note = {Number: 1
Publisher: Nature Publishing Group},
	keywords = {Plant breeding, Agricultural genetics},
	pages = {24--37},
	file = {Full Text PDF:/home/saulo/snap/zotero-snap/common/Zotero/storage/NS2LJHZM/Dias et al. - 2018 - Improving accuracies of genomic predictions for dr.pdf:application/pdf;Snapshot:/home/saulo/snap/zotero-snap/common/Zotero/storage/IPCF4E7E/s41437-018-0053-6.html:text/html},
