	pmcid = {PMC3931944},
	note = {Number: 3},
	keywords = {Genomics, Genome, Plant, Models, Genetic, Phenotype, Triticum, Breeding, Genotype, Quantitative Trait Loci, France, Gene-Environment Interaction, Selection, Genetic},
	pages = {595--607},
	file = {Texto completo:/home/saulo/snap/zotero-snap/common/Zotero/storage/L55DTAI2/Jarquín et al. - 2014 - A reaction norm model for genomic selection using .pdf:application/pdf},
}

